/* pages/input/input.wxss */

.radio {
  display: block;
  margin-bottom: 12rpx;
  font-size: 1rem;
  width: 8.9rem;
  transform: scale(0.9);
}

.phone_personal {
  width: 9.5rem;
  color: rgb(34, 154, 181);
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.phone_one {
  display: flex;
  position: relative;
  justify-content: space-between;
  background-color: rgb(220, 220, 220);
  width: 10.6rem;
  height: 90rpx;
  margin: 0 0 0 15rpx;
  border-radius: 10rpx;
  border-bottom: 2rpx solid rgb(255, 255, 255);
  font-size: 0.8rem;
}

.person_box {
  position: relative;
  font-size: 0.8rem;
}

.phone_select {
  margin-top: 0;
  z-index: 100;
  position: absolute;
}

.select_one {
  text-align: center;
  background-color: rgb(239, 239, 239);
  width: 9.5rem;
  height: 88rpx;
  line-height: 90rpx;
  margin: 0 0 0 0rpx;
  padding: 0 16rpx 0 16rpx;
  border-bottom: 2rpx solid rgb(255, 255, 255);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.personal_image {
  z-index: 100;
  position: absolute;
  right: 2.5%;
  width: 34rpx;
  height: 20rpx;
  margin: 40rpx 0rpx 40rpx 0;
  transition: All 0.4s ease;
  -webkit-transition: All 0.4s ease;
}

.rotateRight {
  transform: rotate(180deg);
}

.scroll {
  margin: 0 -24rpx 0 15rpx;
  border-style: solid;
  border-color: #ddddde;
  border-radius: 2rpx;
}

.btn {
  display: flex;
  justify-content: center;
  margin: 0.6rem;
  position: fixed;
  bottom: 20rpx;
  width: 100%;
  padding: 0 0rpx 0 0rpx
}

.btn button {
  display: inline-block;
  vertical-align: baseline;
  width: 270rpx;
  height: 80rpx;
  margin: 0 4rpx;
  outline: none;
  cursor: pointer;
  text-align: center;
  text-decoration: none;
  font: 30rpx serif, Arial, Helvetica, sans-serif;
  padding: 0.5rem 2rem;
  text-shadow: 0 2rpx 2rpx rgba(0, 0, 0, 0.3);
  border-radius: 2rem;
  -webkit-box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  -moz-box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  background-color: rgba(0, 0, 0, 0.1);
  color: #e8f0de;
  border: solid 2rpx #538312;
  background: #64991e;
  background: -webkit-gradient(linear, left top, left bottom, from(#7db72f), to(#4e7d0e));
}

.btn button text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.text {
  position: absolute;
  top: 50%;
  left: 55%;
  transform: translate(-50%, -50%);
}

.btn button:active {
  color: #e4efd7;
  text-shadow: 0 2rpx 2rpx rgba(0, 0, 0, 0.3);
  border: solid 2rpx #9bcd9b;
  background: #64991e;
  background: -webkit-gradient(linear, left top, left bottom, from(#77aa31), to(#3c5d0e));
}

.input {
  padding-left: 20rpx;
  height: 88rpx;
}

.inputView {
  border: 4rpx solid #bbdef8;
  border-radius: 80rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
}

.pickView {
  width: 90%;
  height: 400rpx;
  display: inline-block;
}

.picker {
  margin: 0.3rem 0.3rem 0.3rem 0.5rem;
}

.pickerView {
  border: 4rpx solid #bbdef8;
  border-radius: 80rpx;
  padding: 0.3rem 0.5rem;
}

.help {
  padding: 3rem 1rem;
  color: #000;
  font-size: 1rem;
  font-weight: bold;
  font-family: Helvetica;
  text-shadow: 0 2rpx 0 #ccc, 0 4rpx 0 #c9c9c9, 0 6rpx 0 #bbb, 0 8rpx 0 #b9b9b9, 0 10rpx 0 #aaa, 0 12rpx 2rpx rgba(0,0,0,.1), 0 0 10rpx rgba(0,0,0,.1), 0 2rpx 6rpx rgba(0,0,0,.3), 0 6rpx 10rpx rgba(0,0,0,.2), 0 10rpx 20rpx rgba(0,0,0,.25), 0 20rpx 20rpx rgba(0,0,0,.2), 0 40rpx 40rpx rgba(0,0,0,.15);
}